{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",           // ← ESMではなくCJSに
    "moduleResolution": "Node",     // ← bundlerではなくNodeに
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "aws-lambda"]
  },
  "include": ["src/**/*.ts"]
}